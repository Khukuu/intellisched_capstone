# IntelliSched Deployment Configuration
# Copy this file to .env and update the values for your deployment

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Default Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# Default Chair Credentials (CHANGE THESE!)
CHAIR_USERNAME=chair
CHAIR_PASSWORD=your-secure-chair-password
CHAIR_EMAIL=chair@yourdomain.com

# Default Dean Credentials (CHANGE THESE!)
DEAN_USERNAME=dean
DEAN_PASSWORD=your-secure-dean-password
DEAN_EMAIL=dean@yourdomain.com

# Default Secretary Credentials (CHANGE THESE!)
SECRETARY_USERNAME=secretary
SECRETARY_PASSWORD=your-secure-secretary-password
SECRETARY_EMAIL=secretary@yourdomain.com

# Production Settings
DEBUG=false
LOG_LEVEL=INFO
